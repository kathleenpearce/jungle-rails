<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>


    <div class="row">
      <div class="col-sm-8">
      <dl class="dl-horizontal">
        <div><h2> Reviews </h2></div>
        <ul>
          <% @reviews.each do |review| %>
          <div><b> Reviewd by:</b>  &nbsp <%= review.user.name %></div>
          <div><b> Rating out of 5:  &nbsp </b> <%= review.rating %></div>
          <div><b> Reviewed created: </b>  &nbsp <%= review.created_at %></div>
          <div><b> Review description:</b>  &nbsp<i> <%= review.description %><i></div>

          <% end %>
          </ul>
</dl>
    </div>
  </div>

  </article>

</section>
